<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - IdesseCardTypes</title>
	<script src="dist/app.js" defer></script>
	<link rel="stylesheet" href="~/dist/app.css" asp-append-version="true" />
</head>
<body>
	<div class="container w-screen h-screen max-w-none flex align-items-center justify-items-center">
		<main role="main" class="m-auto p-3 w-1/4 md:w-1/3 sm:w-1/2 h-fit flex-col align-items-center justify-items-center">
			@RenderBody()
		</main>
	</div>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>